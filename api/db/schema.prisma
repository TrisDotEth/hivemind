datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Anyone {
  id           Int       @id @default(autoincrement())
  officialName String    @unique
  displayName  String
  shortName    String
  actions      Action[]
  profiles     Profile[]
  createdAt    DateTime  @default(now())
}

model Profile {
  id                Int      @id @default(autoincrement())
  anyoneId          Int
  anyone            Anyone   @relation(fields: [anyoneId], references: [id])
  profileType       String   @default("")
  importedData      Json
  createdAt         DateTime @default(now())
  farcasterUsername String   @default("tris")
}

model Action {
  id                Int      @id @default(autoincrement())
  anyone            Anyone   @relation(fields: [anyoneId], references: [id])
  anyoneDisplayName String
  anyoneId          Int
  content           String
  contentType       String
  createdAt         DateTime @default(now())
  networkLocation   String
  walletAddress     String   @default("")
  signedTransaction String   @default("")
  succeeded         Boolean
}

model ThirdPartyToken {
  id           Int      @id @default(autoincrement())
  profilename  String
  thirdparty   String
  refreshtoken String
  bearertoken  String   @default("0")
  createdAt    DateTime @default(now())
}
