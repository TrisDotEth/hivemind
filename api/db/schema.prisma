model Hivemind {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  actions Action[]
}

model Action {
  id              Int      @id @default(autoincrement())
  name            String
  hivemind        Hivemind @relation(fields: [hivemindId], references: [id])
  hivemindId      Int
  content         String
  createdAt       DateTime @default(now())
  networkLocation String
}
